<odoo>
    <!-- Clinical Impressions -->
    <record model="ir.ui.view" id="medical_encounter_view_form">
        <field name="name">medical.encounter.form</field>
        <field name="model">medical.encounter</field>
        <field
            name="inherit_id"
            ref="medical_clinical_condition.medical_encounter_view_form"
        />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button
                    type="object"
                    name="action_view_clinical_impressions"
                    class="oe_stat_button"
                    icon="fa-stethoscope"
                    string="Clinical Impressions"
                >
                </button>
                <button
                    type="object"
                    name="action_view_family_history"
                    class="oe_stat_button"
                    icon="fa-history"
                >
                    <field
                        name="family_history_count"
                        widget="statinfo"
                        string="Family History"
                    />
                    <field name="family_history_ids" invisible="1" />
                </button>
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="medical_clinical_impression_encounter_tree_view">
        <field
            name="name"
        >medical.clinical.impression.tree (in medical_clinical_impression)</field>
        <field name="model">medical.clinical.impression</field>
        <field name="arch" type="xml">
            <tree string="Clinical Impressions">
                <field name="specialty_id" />
                <field name="summary" />
                <field name="impression_date" />
            </tree>
        </field>
    </record>
    <record
        model="ir.actions.act_window"
        id="medical_encounter_clinical_impression_act_window"
    >
        <field name="name">Medical Clinical Impression</field>
        <field name="res_model">medical.clinical.impression</field>
        <field name="view_mode">tree,form</field>
        <field
            name="view_ids"
            eval="[(5,0,0),
                          (0,0,{'view_mode':'tree', 'view_id': ref('medical_clinical_impression_encounter_tree_view')})]"
        />
    </record>
</odoo>
