<odoo>
    <record id="group_medical_clinical_impression_display" model="res.groups">
        <field name="name">Clinical Impression Display</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field
            name="implied_ids"
            eval="[(4, ref('medical_clinical.group_medical_view_requests'))]"
        />
    </record>
    <record id="group_medical_clinical_impression_list" model="res.groups">
        <field name="name">Clinical Impression List</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field
            name="implied_ids"
            eval="[(4, ref('group_medical_clinical_impression_display'))]"
        />
    </record>
    <record id="group_medical_clinical_impression_manager" model="res.groups">
        <field name="name">Clinical Impression Manager</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field
            name="implied_ids"
            eval="[(4, ref('group_medical_clinical_impression_list'))]"
        />
    </record>
    <record id="group_medical_clinical_impression_template_manager" model="res.groups">
        <field name="name">Clinical Impression Template Manager</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field
            name="implied_ids"
            eval="[(4, ref('group_medical_clinical_impression_list'))]"
        />
    </record>
    <!-- Generic groups -->
    <record id="medical_base.group_medical_user" model="res.groups">
        <field
            name="implied_ids"
            eval="[(4, ref('group_medical_clinical_impression_display'))]"
        />
    </record>
    <record id="medical_base.group_medical_configurator" model="res.groups">
        <field
            name="implied_ids"
            eval="[(4, ref('group_medical_clinical_impression_manager')),(4, ref('group_medical_clinical_impression_template_manager'))]"
        />
    </record>
</odoo>
